{
  "name": "d-plus-zofo",
  "version": "1.0.0",
  "description": "Project D Plus Zofo",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "node dist/server.js",
    "start:dev": "nodemon",
    "start:debug": "node --inspect dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "cd ../ && husky install server/.husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "autobind-decorator": "^2.4.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "ci": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "faker": "^5.5.3",
    "generate-password": "^1.7.1",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "typescript": "^5.2.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "author": "SoftSora",
  "license": "UNLICENSED",
  "jest": {
    "roots": [
      "src"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "quoteProps": "as-needed",
    "jsxSingleQuote": false
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "tsconfig": "tsconfig.json"
}
